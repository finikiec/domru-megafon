.block-tarif {
    float: left;
    width: 151px;
    color: #9e9e9e
}

.block-tarif__item {
    padding-left: 15px;
    font-size: 14px;
    width: 151px;
    display: table-cell;
    vertical-align: middle;
    line-height: 50px;
    float: left
}

.block-tarif:hover {
    box-shadow: 0 0 10px 1px #000
}

.block-tarif__link {
    color: #4a90e2;
    font-size: 24px;
    text-decoration: underline
}

.block-tarif__change {
    color: #4a90e2;
    text-decoration: underline;
    font-size: 14px;
    cursor: pointer
}